<view class="page-container">
  <!-- 用户信息区域 -->
  <view class="user-section">
    <view class="user-avatar">
      <view class="avatar-icon">
        <view class="icon-head"></view>
        <view class="icon-body"></view>
      </view>
    </view>
    <view class="user-info">
      <view class="user-name">{{nickname}}</view>
    </view>
  </view>

  <!-- 菜单列表 -->
  <view class="menu-list">
    <view class="menu-item" bindtap="onPhoneTap">
      <view class="menu-label">修改我的信息</view>
      <view class="menu-right">
        <text class="menu-arrow">></text>
      </view>
    </view>
    <view class="menu-item" bindtap="onEmergencyContactsTap">
      <view class="menu-label">紧急联系人</view>
      <view class="menu-right">
        <text class="menu-arrow">></text>
      </view>
    </view>
    <view class="menu-item" bindtap="onSubscribeTap" wx:if="{{showSubscribeAuth}}">
      <view class="menu-label menu-label-warn">授权小程序发送告警通知</view>
      <view class="menu-right">
        <text class="menu-arrow">></text>
      </view>
    </view>
    <view class="menu-item" bindtap="onAboutTap">
      <view class="menu-label">关于 / 使用说明</view>
      <view class="menu-right">
        <text class="menu-arrow">></text>
      </view>
    </view>
  </view>
</view>

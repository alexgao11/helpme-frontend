.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

/* ========== 设备详情视图 ========== */
.device-detail {
  padding: 24rpx;
}

.device-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.device-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.device-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
}

.edit-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-image {
  width: 40rpx;
  height: 40rpx;
}

.device-status {
  display: flex;
  align-items: center;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.status-normal {
  background-color: #34C759;
}

.status-alarm {
  background-color: #FF3B30;
}

.status-text {
  font-size: 28rpx;
  color: #666666;
}

/* 分享按钮 */
.share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 96rpx;
  background-color: #3478F6;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  border: none;
  margin-bottom: 24rpx;
}

.share-btn::after {
  border: none;
}

.share-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

/* 已分享用户 */
.shared-users-section {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 24rpx;
}

.user-list {
  display: flex;
  flex-direction: column;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.user-item:not(:last-child) {
  border-bottom: 1rpx solid #f0f0f0;
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #3478F6;
  color: #ffffff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.user-name {
  flex: 1;
  font-size: 32rpx;
  color: #000000;
}

.user-tag {
  font-size: 24rpx;
  color: #999999;
  background-color: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.remove-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999999;
}

/* 删除设备 */
.delete-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0;
}

.delete-btn {
  font-size: 32rpx;
  color: #FF3B30;
  margin-bottom: 16rpx;
}

.delete-hint {
  font-size: 26rpx;
  color: #999999;
}

/* ========== 设备配置视图 ========== */
.config-view {
  padding: 0 48rpx;
  background-color: #ffffff;
  min-height: 100vh;
}

/* 配置表单 */
.config-form {
  padding-top: 120rpx;
}

.form-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 16rpx;
}

.form-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 60rpx;
}

.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 12rpx;
}

.input-field {
  width: 100%;
  height: 96rpx;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  padding: 0 32rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.error-text {
  color: #FF3B30;
  font-size: 28rpx;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
}

.start-btn {
  margin-top: 48rpx;
  width: 100%;
  height: 96rpx;
  background-color: #3478F6;
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 500;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.start-btn::after {
  border: none;
}

/* 配置进行中 */
.progress-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.loading-container {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 48rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f0f0f0;
  border-top-color: #3478F6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.progress-status {
  font-size: 32rpx;
  color: #333333;
  text-align: center;
  margin-bottom: 60rpx;
}

.cancel-btn {
  width: 240rpx;
  height: 80rpx;
  background-color: #f5f5f5;
  color: #666666;
  font-size: 30rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.cancel-btn::after {
  border: none;
}

/* 配置完成 */
.done-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.done-icon {
  width: 120rpx;
  height: 120rpx;
  background-color: #34C759;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.checkmark {
  width: 40rpx;
  height: 60rpx;
  border-right: 8rpx solid #ffffff;
  border-bottom: 8rpx solid #ffffff;
  transform: rotate(45deg);
  margin-bottom: 12rpx;
}

.done-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 48rpx;
}

.result-box {
  width: 100%;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 48rpx;
}

.result-label {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 16rpx;
}

.result-content {
  font-size: 32rpx;
  color: #000000;
  word-break: break-all;
  line-height: 1.5;
}

.reset-btn {
  width: 280rpx;
  height: 88rpx;
  background-color: #3478F6;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.reset-btn::after {
  border: none;
}

.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.page-scroll {
  flex: 1;
  height: 100%;
  min-height: 0;
  padding-bottom: calc(124rpx + env(safe-area-inset-bottom));
}

.refresh-tip {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  padding: 12rpx 0 12rpx;
}

.page-content {
  display: flex;
  flex-direction: column;
}

.page-footer {
  padding: 16rpx 24rpx calc(116rpx + env(safe-area-inset-bottom));
  background-color: #f5f5f5;
}

/* ========== 设备列表 ========== */
.device-list-section {
  padding: 24rpx 24rpx 0;
}

.section-title {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
  padding-bottom: 16rpx;
}

.device-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.device-item {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx;
  display: flex;
  flex-direction: column;
}

.device-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.device-item-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #000000;
}

.device-item-status {
  display: flex;
  align-items: center;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.status-normal {
  background-color: #34C759;
}

.status-alarm {
  background-color: #FF3B30;
}

.status-text {
  font-size: 26rpx;
  color: #666666;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
  padding: 40rpx 0 24rpx;
}

.add-device-btn {
  width: 100%;
  height: 88rpx;
  background-color: #3478F6;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.add-device-btn::after {
  border: none;
}

/* ========== 设备配置视图 ========== */
.config-overlay {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding: 0 24rpx calc(24rpx + env(safe-area-inset-bottom) + 98rpx);
  background: rgba(18, 30, 52, 0.18);
  animation: overlay-fade 240ms ease-out;
  z-index: 20;
}

.config-panel {
  width: 100%;
  max-height: 86vh;
  overflow: auto;
  padding: 32rpx 32rpx calc(0rpx + env(safe-area-inset-bottom));
  background-color: #ffffff;
  border-radius: 28rpx;
  box-shadow: 0 24rpx 80rpx rgba(18, 30, 52, 0.18);
  animation: panel-rise 320ms cubic-bezier(0.2, 0.8, 0.2, 1);
}

.config-overlay.is-closing {
  animation: overlay-fade-out 380ms ease-in forwards;
}

.config-panel.is-closing {
  animation: panel-drop 380ms cubic-bezier(0.4, 0, 0.8, 0.2) forwards;
}

@keyframes overlay-fade {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes overlay-fade-out {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}

@keyframes panel-rise {
  from {
    opacity: 0;
    transform: translate3d(0, 48rpx, 0) scale(0.98);
  }
  to {
    opacity: 1;
    transform: translate3d(0, 0, 0) scale(1);
  }
}

@keyframes panel-drop {
  from {
    opacity: 1;
    transform: translate3d(0, 0, 0) scale(1);
  }
  to {
    opacity: 0;
    transform: translate3d(0, 130rpx, 0) scale(0.94);
  }
}

/* 配置表单 */
.config-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.collapse-btn {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  min-width: 96rpx;
  height: 80rpx;
  padding: 0 16rpx 0 0;
  font-size: 26rpx;
  color: #1f2a44;
  background: transparent;
  border: none;
  border-radius: 0;
  box-shadow: none;
}

.collapse-btn::after {
  border: none;
}

.collapse-icon {
  width: 26rpx;
  height: 26rpx;
  border-right: 6rpx solid #000000;
  border-bottom: 6rpx solid #000000;
  transform: rotate(45deg) translateY(-12rpx);
  display: block;
}

.form-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 16rpx;
}

.form-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 60rpx;
}

.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 12rpx;
}

.input-field {
  width: 100%;
  height: 96rpx;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  padding: 0 32rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.input-with-action {
  position: relative;
  display: flex;
  align-items: center;
}

.input-field--with-action {
  padding-right: 88rpx;
}

.reveal-btn {
  position: absolute;
  right: 18rpx;
  min-width: 0 !important;
  height: 48rpx;
  padding: 0 !important;
  line-height: 48rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  color: #3478F6;
  background-color: transparent;
  border: none;
  z-index: 3;
}


.error-text {
  color: #FF3B30;
  font-size: 28rpx;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
}

.start-btn {
  margin-top: 28rpx;
  width: 100%;
  height: 96rpx;
  background-color: #3478F6;
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 500;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.start-btn::after {
  border: none;
}

/* 配置进行中 */
.progress-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 120rpx;
}

.loading-container {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 48rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f0f0f0;
  border-top-color: #3478F6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.progress-status {
  font-size: 32rpx;
  color: #333333;
  text-align: center;
  margin-bottom: 60rpx;
}

.cancel-btn {
  width: 240rpx;
  height: 80rpx;
  background-color: #f5f5f5;
  color: #666666;
  font-size: 30rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.cancel-btn::after {
  border: none;
}

/* 配置完成 */
.done-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 120rpx;
}

.done-icon {
  width: 120rpx;
  height: 120rpx;
  background-color: #34C759;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.checkmark {
  width: 40rpx;
  height: 60rpx;
  border-right: 8rpx solid #ffffff;
  border-bottom: 8rpx solid #ffffff;
  transform: rotate(45deg);
  margin-bottom: 12rpx;
}

.done-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 48rpx;
}

.result-box {
  width: 100%;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 48rpx;
}

.result-label {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 16rpx;
}

.result-content {
  font-size: 32rpx;
  color: #000000;
  word-break: break-all;
  line-height: 1.5;
}

.reset-btn {
  width: 280rpx;
  height: 88rpx;
  background-color: #3478F6;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.reset-btn::after {
  border: none;
}

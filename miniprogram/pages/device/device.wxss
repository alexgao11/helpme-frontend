.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #ffffff;
  padding: 0 48rpx;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty-icon {
  margin-bottom: 40rpx;
}

.icon-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.grid-item {
  width: 56rpx;
  height: 56rpx;
  border: 4rpx solid #CCCCCC;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
}

.add-btn {
  margin-top: 60rpx;
  width: 320rpx;
  height: 88rpx;
  background-color: #3478F6;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.add-btn::after {
  border: none;
}

/* 扫描状态 */
.scan-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 160rpx;
}

/* 雷达容器 */
.radar-container {
  position: relative;
  width: 400rpx;
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 雷达圆环 */
.radar-circle {
  position: absolute;
  border-radius: 50%;
  border: 2rpx solid rgba(52, 120, 246, 0.3);
}

.radar-circle-1 {
  width: 100rpx;
  height: 100rpx;
  animation: radar-pulse 2s ease-out infinite;
  animation-delay: 0s;
}

.radar-circle-2 {
  width: 180rpx;
  height: 180rpx;
  animation: radar-pulse 2s ease-out infinite;
  animation-delay: 0.4s;
}

.radar-circle-3 {
  width: 280rpx;
  height: 280rpx;
  animation: radar-pulse 2s ease-out infinite;
  animation-delay: 0.8s;
}

.radar-circle-4 {
  width: 380rpx;
  height: 380rpx;
  animation: radar-pulse 2s ease-out infinite;
  animation-delay: 1.2s;
}

/* 雷达扫描线 */
.radar-sweep {
  position: absolute;
  width: 50%;
  height: 50%;
  top: 0;
  left: 50%;
  transform-origin: bottom left;
  background: linear-gradient(
    135deg,
    rgba(52, 120, 246, 0.4) 0%,
    rgba(52, 120, 246, 0.1) 50%,
    transparent 100%
  );
  animation: radar-sweep 2s linear infinite;
  border-radius: 100% 0 0 0;
}

/* 雷达中心 */
.radar-center {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  background: radial-gradient(circle, #3478F6 0%, rgba(52, 120, 246, 0.3) 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.radar-dot {
  width: 20rpx;
  height: 20rpx;
  background-color: #ffffff;
  border-radius: 50%;
  animation: radar-dot-pulse 1s ease-in-out infinite;
}

/* 扫描状态文字 */
.scan-status {
  margin-top: 60rpx;
  font-size: 32rpx;
  color: #3478F6;
  font-weight: 500;
}

/* 取消按钮 */
.cancel-btn {
  margin-top: 60rpx;
  width: 320rpx;
  height: 88rpx;
  background-color: #f5f5f5;
  color: #666666;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.cancel-btn::after {
  border: none;
}

/* 动画关键帧 */
@keyframes radar-pulse {
  0% {
    transform: scale(0.5);
    opacity: 1;
    border-color: rgba(52, 120, 246, 0.6);
  }
  100% {
    transform: scale(1.2);
    opacity: 0;
    border-color: rgba(52, 120, 246, 0);
  }
}

@keyframes radar-sweep {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes radar-dot-pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(0.8);
    opacity: 0.7;
  }
}

/* 已连接状态 */
.connected-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 160rpx;
}

.connected-icon {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #34C759 0%, #30D158 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.bluetooth-icon.connected {
  width: 48rpx;
  height: 60rpx;
  background: #ffffff;
  clip-path: polygon(50% 0%, 100% 25%, 50% 50%, 100% 75%, 50% 100%, 50% 60%, 0% 75%, 50% 50%, 0% 25%, 50% 40%);
}

.connected-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #34C759;
  margin-bottom: 16rpx;
}

.connected-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
  margin-bottom: 12rpx;
}

.signal-info {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 40rpx;
}

/* 消息框 */
.message-box {
  width: 100%;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 40rpx;
}

.message-label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 12rpx;
}

.message-content {
  font-size: 32rpx;
  color: #000000;
  font-weight: 500;
  word-break: break-all;
}

/* 操作按钮组 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  width: 100%;
  align-items: center;
}

.action-btn {
  width: 320rpx;
  height: 88rpx;
  background-color: #3478F6;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.action-btn::after {
  border: none;
}

.disconnect-btn {
  width: 320rpx;
  height: 88rpx;
  background-color: #FF3B30;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.disconnect-btn::after {
  border: none;
}

/* 设备列表 */
.device-list {
  width: 100%;
  margin-top: 40rpx;
  max-height: 400rpx;
  overflow-y: auto;
}

.device-list-title {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
  text-align: center;
}

.device-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #f8f8f8;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.device-item:active {
  background-color: #e8e8e8;
}

.device-info {
  flex: 1;
}

.device-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #000000;
  margin-bottom: 8rpx;
}

.device-signal {
  font-size: 24rpx;
  color: #999999;
}

.device-connect-text {
  font-size: 26rpx;
  color: #3478F6;
  font-weight: 500;
}

.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #ffffff;
  padding: 0 48rpx;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty-icon {
  margin-bottom: 40rpx;
}

.icon-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.grid-item {
  width: 56rpx;
  height: 56rpx;
  border: 4rpx solid #CCCCCC;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
}

.add-btn {
  margin-top: 60rpx;
  width: 320rpx;
  height: 88rpx;
  background-color: #3478F6;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.add-btn::after {
  border: none;
}

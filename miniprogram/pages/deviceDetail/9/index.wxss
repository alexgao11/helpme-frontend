.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.detail-scroll {
  flex: 1;
  height: 100%;
  min-height: 0;
}

.refresh-tip {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  padding: 12rpx 0 20rpx;
}

.device-detail {
  padding: 24rpx;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.device-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.device-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.device-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
}

.edit-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-image {
  width: 40rpx;
  height: 40rpx;
}

.device-status {
  display: flex;
  align-items: center;
}

.device-location {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #666666;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.status-normal {
  background-color: #34C759;
}

.status-alarm {
  background-color: #FF3B30;
}

.status-text {
  font-size: 28rpx;
  color: #666666;
}

.share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 96rpx;
  background-color: #3478F6;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  border: none;
  margin-bottom: 24rpx;
}

.share-btn::after {
  border: none;
}

.share-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.share-notice {
  background-color: #fff7e6;
  color: #8a4b08;
  font-size: 26rpx;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.alarm-buttons-section {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.alarm-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.alarm-button-card {
  border: 1rpx solid #f0f0f0;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.alarm-button-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.alarm-button-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #000000;
}

.alarm-count {
  font-size: 26rpx;
  color: #ff3b30;
  background-color: #fff1f0;
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
}

.alarm-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333333;
}

.alarm-label {
  color: #999999;
}

.alarm-value {
  color: #333333;
  max-width: 60%;
  text-align: right;
  word-break: break-all;
}

.alarm-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 4rpx;
}

.alarm-action-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
}

.alarm-action-btn::after {
  border: none;
}

.alarm-action-btn.edit-btn {
  background-color: #f2f4f7;
  color: #333333;
  border: 2rpx solid #e5e5e5;
}

.alarm-action-btn.delete-btn {
  background-color: #fff1f0;
  color: #d92d20;
  border: 2rpx solid #ffd6d2;
}

.alarm-empty {
  font-size: 26rpx;
  color: #999999;
  text-align: center;
  padding: 16rpx 0;
}

.shared-users-section {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 24rpx;
}

.user-list {
  display: flex;
  flex-direction: column;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.user-item:not(:last-child) {
  border-bottom: 1rpx solid #f0f0f0;
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #3478F6;
  color: #ffffff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.user-name {
  flex: 1;
  font-size: 32rpx;
  color: #000000;
}

.remove-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999999;
}

.delete-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0 calc(48rpx + env(safe-area-inset-bottom));
  margin-top: auto;
}

.delete-btn {
  font-size: 32rpx;
  color: #FF3B30;
  margin-bottom: 16rpx;
}

.delete-hint {
  font-size: 26rpx;
  color: #999999;
}

.empty-state {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 弹窗遮罩 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

/* 弹窗容器 */
.modal-container {
  position: fixed;
  left: 48rpx;
  right: 48rpx;
  top: 50%;
  transform: translateY(-50%);
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx;
  z-index: 101;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
  text-align: center;
  margin-bottom: 40rpx;
}

.modal-field {
  margin-bottom: 32rpx;
}

.field-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
}

.field-input {
  border: 2rpx solid #E5E5E5;
  border-radius: 16rpx;
  padding: 0 32rpx;
  height: 96rpx;
  font-size: 28rpx;
  color: #333333;
}

.modal-buttons {
  display: flex;
  gap: 24rpx;
  margin-top: 48rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
}

.modal-btn::after {
  border: none;
}

.cancel-btn {
  background-color: #ffffff;
  color: #333333;
  border: 2rpx solid #E5E5E5;
}

.confirm-btn {
  background-color: #3478F6;
  color: #ffffff;
  border: none;
}

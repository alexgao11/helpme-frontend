.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.detail-scroll {
  flex: 1;
}

.device-detail {
  padding: 24rpx;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.device-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.device-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.device-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
}

.edit-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-image {
  width: 40rpx;
  height: 40rpx;
}

.device-status {
  display: flex;
  align-items: center;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.status-normal {
  background-color: #34C759;
}

.status-alarm {
  background-color: #FF3B30;
}

.status-text {
  font-size: 28rpx;
  color: #666666;
}

.share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 96rpx;
  background-color: #3478F6;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  border: none;
  margin-bottom: 24rpx;
}

.share-btn::after {
  border: none;
}

.share-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.share-notice {
  background-color: #fff7e6;
  color: #8a4b08;
  font-size: 26rpx;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.shared-users-section {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 24rpx;
}

.user-list {
  display: flex;
  flex-direction: column;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.user-item:not(:last-child) {
  border-bottom: 1rpx solid #f0f0f0;
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #3478F6;
  color: #ffffff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.user-name {
  flex: 1;
  font-size: 32rpx;
  color: #000000;
}

.remove-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999999;
}

.delete-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0 calc(48rpx + env(safe-area-inset-bottom));
  margin-top: auto;
}

.delete-btn {
  font-size: 32rpx;
  color: #FF3B30;
  margin-bottom: 16rpx;
}

.delete-hint {
  font-size: 26rpx;
  color: #999999;
}

.empty-state {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

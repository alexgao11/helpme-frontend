<view class="page-container">
  <!-- 显示名称 -->
  <view class="field-group">
    <view class="field-label">显示名称</view>
    <view class="input-box">
      <input class="input-field" value="{{nickname}}" bindinput="onNicknameInput" />
    </view>
  </view>

  <!-- 手机号（只读） -->
  <view class="field-group">
    <view class="field-label">手机号</view>
    <view class="input-box readonly">
      <text class="input-text">{{phoneDisplay}}</text>
    </view>
  </view>

  <!-- 底部按钮 -->
  <view class="bottom-area">
    <button class="save-btn" bindtap="onSave">保存</button>
    <button class="cancel-btn" bindtap="onCancel">取消</button>
  </view>
</view>

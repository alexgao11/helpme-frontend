.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

/* 联系人列表 */
.contacts-list {
  margin-top: 20rpx;
  background-color: #ffffff;
}

.contact-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #EEEEEE;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-info {
  display: flex;
  flex-direction: column;
}

.contact-name {
  font-size: 30rpx;
  color: #000000;
  margin-bottom: 8rpx;
}

.contact-phone {
  font-size: 26rpx;
  color: #666666;
}

.contact-actions {
  display: flex;
  align-items: center;
}

.contact-edit {
  padding: 16rpx 24rpx;
}

.edit-text {
  font-size: 28rpx;
  color: #3478F6;
}

.contact-delete {
  padding: 16rpx 24rpx;
}

.delete-text {
  font-size: 28rpx;
  color: #FF4D4F;
}

/* 空状态 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
  background-color: #ffffff;
  margin-top: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 添加按钮 */
.add-button-container {
  padding: 40rpx 48rpx;
}

.add-button {
  width: 100%;
  height: 96rpx;
  background-color: #3478F6;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  border: none;
  white-space: nowrap;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
}

.add-button::after {
  border: none;
}

/* 弹窗遮罩 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

/* 弹窗容器 */
.modal-container {
  position: fixed;
  left: 48rpx;
  right: 48rpx;
  top: 50%;
  transform: translateY(-50%);
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx;
  z-index: 101;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
  text-align: center;
  margin-bottom: 40rpx;
}

.modal-field {
  margin-bottom: 32rpx;
}

.field-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
}

.field-input {
  border: 2rpx solid #E5E5E5;
  border-radius: 16rpx;
  padding: 0 32rpx;
  height: 96rpx;
  font-size: 28rpx;
  color: #333333;
}

.modal-buttons {
  display: flex;
  gap: 24rpx;
  margin-top: 48rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
}

.modal-btn::after {
  border: none;
}

.cancel-btn {
  background-color: #ffffff;
  color: #333333;
  border: 2rpx solid #E5E5E5;
}

.confirm-btn {
  background-color: #3478F6;
  color: #ffffff;
  border: none;
}
